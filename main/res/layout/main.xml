<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/transportsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startService" />

        <Button
            android:id="@+id/buttonAdvancedSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openAdvancedSettings"
            android:text="@string/pref_advanced_settings" />

        <Button
            android:id="@+id/buttonModules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openModules"
            android:text="Modules" />

        <Button
            android:id="@+id/buttonImportExportSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openImportExportSettings"
            android:text="Import/Export Settings" />

        <Button
            android:id="@+id/discoverComponents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="discoverComponents"
            android:text="Discover Components" />

        <Button
            android:id="@+id/donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="donate"
            android:text="Donate" />

        <Button
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showAbout"
            android:text="About" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textIntegrity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAXS Permission Integrity: " />

            <TextView
                android:id="@+id/textIntegrityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>